<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLabel"
        android:textStyle="bold"
        android:text="Its a text file belonging to assert"/>
    <TextView
        android:id="@+id/textLabe2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/textLabel"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textLabe3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLabe2"
        android:textStyle="bold"
        android:text="cheers,"/>
    <TextView
        android:id="@+id/textLabe4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLabe3"
        android:textStyle="bold"
        android:text="pete houston"/>

</RelativeLayout>